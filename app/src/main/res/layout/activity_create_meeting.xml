<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/background">

    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/background_header"
        android:elevation="4dp"
        app:titleTextColor="@color/text_primary"
        app:navigationIconTint="@color/text_primary" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="@color/background_card"
                app:cardCornerRadius="8dp"
                app:cardElevation="2dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Titel *"
                        app:boxBackgroundColor="@android:color/transparent">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/inputTitle"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="@color/text_on_light"
                            android:inputType="text"
                            android:maxLines="1" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:hint="Beschreibung (optional)"
                        app:boxBackgroundColor="@android:color/transparent">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/inputDescription"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="@color/text_on_light"
                            android:inputType="textMultiLine"
                            android:minLines="3"
                            android:maxLines="5"
                            android:gravity="top" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="24dp"
                        android:text="Datum"
                        android:textColor="@color/text_on_light"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <Spinner
                        android:id="@+id/spinnerDateType"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp" />

                    <!-- Fixed Date Layout -->
                    <LinearLayout
                        android:id="@+id/layoutFixedDate"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:orientation="vertical"
                        android:visibility="visible">

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btnSelectDate"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Datum und Uhrzeit w채hlen"
                            android:backgroundTint="@color/background_header"
                            android:textColor="@color/text_primary"
                            app:icon="@android:drawable/ic_menu_my_calendar"
                            app:iconTint="@color/text_primary" />
                    </LinearLayout>

                    <!-- Date Range Layout -->
                    <LinearLayout
                        android:id="@+id/layoutDateRange"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:orientation="vertical"
                        android:visibility="gone">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Von:"
                            android:textColor="@color/text_on_light"
                            android:textSize="14sp" />

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btnSelectDateFrom"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:text="Startdatum w채hlen"
                            android:backgroundTint="@color/background_header"
                            android:textColor="@color/text_primary"
                            app:icon="@android:drawable/ic_menu_my_calendar"
                            app:iconTint="@color/text_primary" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="12dp"
                            android:text="Bis:"
                            android:textColor="@color/text_on_light"
                            android:textSize="14sp" />

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btnSelectDateTo"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:text="Enddatum w채hlen"
                            android:backgroundTint="@color/background_header"
                            android:textColor="@color/text_primary"
                            app:icon="@android:drawable/ic_menu_my_calendar"
                            app:iconTint="@color/text_primary" />
                    </LinearLayout>

                    <!-- Recurring Layout -->
                    <LinearLayout
                        android:id="@+id/layoutRecurring"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:orientation="vertical"
                        android:visibility="gone">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Wochentage:"
                            android:textColor="@color/text_on_light"
                            android:textSize="14sp" />

                        <CheckBox
                            android:id="@+id/checkboxMonday"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Montag"
                            android:textColor="@color/text_on_light" />

                        <CheckBox
                            android:id="@+id/checkboxTuesday"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Dienstag"
                            android:textColor="@color/text_on_light" />

                        <CheckBox
                            android:id="@+id/checkboxWednesday"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Mittwoch"
                            android:textColor="@color/text_on_light" />

                        <CheckBox
                            android:id="@+id/checkboxThursday"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Donnerstag"
                            android:textColor="@color/text_on_light" />

                        <CheckBox
                            android:id="@+id/checkboxFriday"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Freitag"
                            android:textColor="@color/text_on_light" />

                        <CheckBox
                            android:id="@+id/checkboxSaturday"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Samstag"
                            android:textColor="@color/text_on_light" />

                        <CheckBox
                            android:id="@+id/checkboxSunday"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Sonntag"
                            android:textColor="@color/text_on_light" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="12dp"
                            android:text="H채ufigkeit:"
                            android:textColor="@color/text_on_light"
                            android:textSize="14sp" />

                        <Spinner
                            android:id="@+id/spinnerFrequency"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp" />
                    </LinearLayout>

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnSave"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="24dp"
                        android:text="Gesuch erstellen"
                        android:backgroundTint="@color/primary"
                        android:textColor="@color/text_on_light"
                        app:icon="@android:drawable/ic_menu_save"
                        app:iconTint="@color/text_on_light" />

                    <ProgressBar
                        android:id="@+id/progressBar"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="16dp"
                        android:visibility="gone" />

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>
    </ScrollView>

</LinearLayout>
