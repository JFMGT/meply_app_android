<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@color/background">

    <!-- Bild-Vorschau -->
    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginBottom="16dp"
        app:cardElevation="2dp"
        app:cardCornerRadius="8dp">

        <ImageView
            android:id="@+id/dialogImagePreview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:contentDescription="Bildvorschau" />

    </com.google.android.material.card.MaterialCardView>

    <!-- Alt-Text Eingabe -->
    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Bildbeschreibung (Alt-Text)"
        app:counterEnabled="true"
        app:counterMaxLength="200"
        app:hintTextColor="@color/text_secondary"
        app:boxStrokeColor="@color/primary">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/dialogAltTextInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:maxLength="200"
            android:textColor="@color/text_primary"
            android:background="@color/background_card" />

    </com.google.android.material.textfield.TextInputLayout>

    <!-- Buttons -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:orientation="horizontal"
        android:gravity="end">

        <!-- Löschen Button -->
        <Button
            android:id="@+id/dialogDeleteButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:text="Löschen"
            android:textColor="@color/error"
            style="@style/Widget.MaterialComponents.Button.TextButton" />

        <!-- Speichern Button -->
        <Button
            android:id="@+id/dialogSaveButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Speichern"
            android:backgroundTint="@color/primary"
            android:textColor="@color/text_on_primary" />

    </LinearLayout>

</LinearLayout>
