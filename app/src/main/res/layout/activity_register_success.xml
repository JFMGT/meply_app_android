<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="32dp"
    android:background="@color/background">

    <!-- App Logo -->
    <ImageView
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginBottom="32dp"
        android:src="@drawable/logo"
        android:tint="@color/primary"
        android:contentDescription="Meply Logo" />

    <!-- Success Title -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Willkommen bei Meply!"
        android:textColor="@color/text_primary"
        android:textSize="28sp"
        android:textStyle="bold"
        android:textAlignment="center"
        android:layout_marginBottom="16dp" />

    <!-- Success Message -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Deine Registrierung war erfolgreich. Schön, dass du Teil unserer Brettspiel-Community wirst!"
        android:textColor="@color/text_primary"
        android:textSize="16sp"
        android:textAlignment="center"
        android:lineSpacingExtra="4dp"
        android:layout_marginBottom="24dp" />

    <!-- Email verification hint -->
    <com.google.android.material.card.MaterialCardView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="32dp"
        app:cardBackgroundColor="@color/surface"
        app:cardCornerRadius="12dp"
        app:cardElevation="0dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Noch ein Schritt:"
                android:textColor="@color/primary"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginBottom="8dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Wir haben dir eine E-Mail geschickt. Bitte klicke auf den Bestätigungslink, um deinen Account zu aktivieren."
                android:textColor="@color/text_secondary"
                android:textSize="14sp"
                android:lineSpacingExtra="4dp"
                android:layout_marginBottom="12dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Tipp: Schau auch in deinem Spam-Ordner nach, falls die E-Mail nicht ankommt."
                android:textColor="@color/text_disabled"
                android:textSize="12sp"
                android:fontStyle="italic" />

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

    <!-- Login Button -->
    <Button
        android:id="@+id/btnGoToLogin"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:text="Zum Login"
        android:textColor="@color/text_on_primary"
        android:textSize="16sp"
        android:textStyle="bold"
        android:backgroundTint="@color/primary" />

</LinearLayout>
