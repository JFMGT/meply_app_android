<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/background_card"
    android:orientation="horizontal"
    android:padding="12dp">

    <TextView
        android:id="@+id/code_status_icon"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginEnd="12dp"
        android:gravity="center"
        android:textColor="@color/text_on_light"
        android:textSize="18sp"
        tools:text="âœ“" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/code_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/text_on_light"
            android:textSize="16sp"
            android:textStyle="bold"
            tools:text="ABC123DEF" />

        <TextView
            android:id="@+id/code_meta"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/text_on_light"
            android:textSize="12sp"
            tools:text="Verwendet am 15.01.2026" />
    </LinearLayout>

    <ImageView
        android:id="@+id/code_copy_button"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:clickable="true"
        android:contentDescription="Code kopieren"
        android:focusable="true"
        android:padding="8dp"
        android:src="@android:drawable/ic_menu_share"
        android:tint="@color/primary"
        tools:ignore="UseAppTint" />

</LinearLayout>
