<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:fillViewport="false"
    android:isScrollContainer="true"
    android:overScrollMode="ifContentScrolls">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        android:focusableInTouchMode="true">

        <ProgressBar
            android:id="@+id/profile_progress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:visibility="gone" />

        <!-- Avatar Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginBottom="24dp">

            <ImageView
                android:id="@+id/profile_avatar"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_gravity="center"
                android:scaleType="centerCrop"
                android:background="@drawable/rounded_corner_background"
                android:src="@drawable/ic_launcher_foreground"
                android:contentDescription="Profilbild" />

            <Button
                android:id="@+id/btn_change_avatar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Profilbild ändern"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton" />

        </LinearLayout>

        <!-- Spielbereit Card -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/availability_card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            app:cardBackgroundColor="@color/background_card"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp"
            app:strokeColor="@color/primary"
            app:strokeWidth="0dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <!-- Header Row -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Spielbereit"
                        android:textColor="@color/text_on_light"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:drawableStart="@android:drawable/ic_menu_my_calendar"
                        android:drawablePadding="8dp"
                        app:drawableTint="@color/text_on_light" />

                    <ProgressBar
                        android:id="@+id/availability_progress"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:visibility="gone" />

                </LinearLayout>

                <!-- Inactive State -->
                <LinearLayout
                    android:id="@+id/availability_inactive"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="visible">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="Zeige anderen, dass du gerade Mitspieler suchst."
                        android:textColor="@color/text_secondary_on_light"
                        android:textSize="14sp" />

                    <Button
                        android:id="@+id/btn_set_available"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:text="Jetzt als spielbereit markieren"
                        android:backgroundTint="@color/primary"
                        android:textColor="@color/text_on_light" />

                </LinearLayout>

                <!-- Active State -->
                <LinearLayout
                    android:id="@+id/availability_active"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <!-- Status Info -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="8dp"
                        android:padding="12dp"
                        android:background="@drawable/rounded_corner_background">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/availability_status_text"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Du bist als spielbereit markiert!"
                                android:textColor="@color/primary"
                                android:textSize="14sp"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/availability_expires_text"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="4dp"
                                android:text="Gültig bis: Heute, 23:59"
                                android:textColor="@color/text_secondary_on_light"
                                android:textSize="13sp" />

                            <TextView
                                android:id="@+id/availability_hosting_text"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="2dp"
                                android:text="Gastgeber / Gast"
                                android:textColor="@color/text_secondary_on_light"
                                android:textSize="13sp" />

                            <TextView
                                android:id="@+id/availability_note_text"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="4dp"
                                android:textColor="@color/text_secondary_on_light"
                                android:textSize="13sp"
                                android:textStyle="italic"
                                android:visibility="gone" />

                        </LinearLayout>

                    </LinearLayout>

                    <!-- Action Buttons -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="12dp">

                        <Button
                            android:id="@+id/btn_edit_availability"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginEnd="8dp"
                            android:text="Bearbeiten"
                            style="@style/Widget.MaterialComponents.Button.OutlinedButton" />

                        <Button
                            android:id="@+id/btn_remove_availability"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Entfernen"
                            android:backgroundTint="#FF5252"
                            android:textColor="@android:color/white" />

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- Profil Informationen -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:text="Profil Informationen"
            android:textColor="@color/text_primary"
            android:textSize="18sp"
            android:textStyle="bold" />

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            style="@style/Widget.Meply.TextInputLayout">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/edit_username"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Benutzername"
                style="@style/Widget.Meply.TextInputEditText" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            style="@style/Widget.Meply.TextInputLayout">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/edit_birth_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Geburtsdatum (YYYY-MM-DD)"
                android:inputType="date"
                style="@style/Widget.Meply.TextInputEditText" />
        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:text="Geschlecht"
            android:textColor="@color/text_primary"
            android:textSize="14sp" />

        <Spinner
            android:id="@+id/spinner_gender"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:background="@color/background_card"
            android:textColorHint="@color/text_disabled"
            android:padding="12dp" />

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            style="@style/Widget.Meply.TextInputLayout">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/edit_postal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Postleitzahl"
                android:inputType="number"
                style="@style/Widget.Meply.TextInputEditText" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            style="@style/Widget.Meply.TextInputLayout">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/edit_city"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Stadt"
                style="@style/Widget.Meply.TextInputEditText" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            style="@style/Widget.Meply.TextInputLayout">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/edit_radius"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Suchradius (km)"
                android:inputType="number"
                style="@style/Widget.Meply.TextInputEditText" />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Spieleprofile -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            android:text="Spieleprofile"
            android:textColor="@color/text_primary"
            android:textSize="18sp"
            android:textStyle="bold" />

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            style="@style/Widget.Meply.TextInputLayout">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/edit_bgg_profile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="BoardGameGeek Profil"
                android:inputType="textUri"
                style="@style/Widget.Meply.TextInputEditText" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            style="@style/Widget.Meply.TextInputLayout">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/edit_bga_username"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Board Game Arena Benutzername"
                style="@style/Widget.Meply.TextInputEditText" />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Privatsphäre-Einstellungen -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            android:text="Privatsphäre-Einstellungen"
            android:textColor="@color/text_primary"
            android:textSize="18sp"
            android:textStyle="bold" />

        <CheckBox
            android:id="@+id/checkbox_follow_privacy"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:text="Nutzer können mir ohne Bestätigung folgen"
            android:textColor="@color/text_primary" />

        <CheckBox
            android:id="@+id/checkbox_show_in_user_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:text="In Nutzerkarte anzeigen"
            android:textColor="@color/text_primary" />

        <CheckBox
            android:id="@+id/checkbox_allow_profile_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:text="Anderen erlauben, mein Profil zu sehen"
            android:textColor="@color/text_primary" />

        <CheckBox
            android:id="@+id/checkbox_show_ratings"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:text="Spielebewertungen anderen Mitgliedern zeigen"
            android:textColor="@color/text_primary" />

        <!-- Push-Benachrichtigungen -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            android:text="Push-Benachrichtigungen"
            android:textColor="@color/text_primary"
            android:textSize="18sp"
            android:textStyle="bold" />

        <CheckBox
            android:id="@+id/checkbox_push_enabled"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:text="Push-Benachrichtigungen aktivieren"
            android:textColor="@color/text_primary" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:text="Häufigkeit"
            android:textColor="@color/text_primary"
            android:textSize="14sp" />

        <Spinner
            android:id="@+id/spinner_push_frequency"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:background="@color/background_card"
            android:padding="12dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:text="Ruhezeit (keine Benachrichtigungen)"
            android:textColor="@color/text_primary"
            android:textSize="14sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="16dp">

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginEnd="8dp"
                style="@style/Widget.Meply.TextInputLayout">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/edit_push_quiet_start"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Von"
                    android:inputType="none"
                    android:focusable="false"
                    android:clickable="true"
                    style="@style/Widget.Meply.TextInputEditText" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="8dp"
                style="@style/Widget.Meply.TextInputLayout">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/edit_push_quiet_end"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Bis"
                    android:inputType="none"
                    android:focusable="false"
                    android:clickable="true"
                    style="@style/Widget.Meply.TextInputEditText" />
            </com.google.android.material.textfield.TextInputLayout>

        </LinearLayout>

        <Button
            android:id="@+id/btn_save"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:backgroundTint="@color/primary"
            android:text="Speichern"
            android:textColor="@color/text_on_light" />

        <!-- Einladungscodes -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:layout_marginBottom="8dp"
            android:text="Einladungscodes"
            android:textColor="@color/text_primary"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/invite_codes_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:textColor="@color/text_secondary"
            android:textSize="14sp" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/invite_codes_recycler"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:nestedScrollingEnabled="false" />

        <!-- Konto-Einstellungen -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            android:text="Konto"
            android:textColor="@color/text_primary"
            android:textSize="18sp"
            android:textStyle="bold" />

        <!-- Deletion Warning Card (only visible when account is marked for deletion) -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/deletion_warning_card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:visibility="gone"
            app:cardBackgroundColor="#FF5252"
            app:cardCornerRadius="8dp"
            app:cardElevation="2dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Konto zur Löschung vorgemerkt"
                    android:textColor="@android:color/white"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/deletion_warning_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="Dein Konto wird am XX.XX.XXXX gelöscht."
                    android:textColor="@android:color/white"
                    android:textSize="14sp" />

                <Button
                    android:id="@+id/btn_cancel_deletion"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:backgroundTint="@android:color/white"
                    android:text="Löschung abbrechen"
                    android:textColor="#FF5252" />

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <Button
            android:id="@+id/btn_delete_account"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="132dp"
            android:backgroundTint="#FF5252"
            android:text="Konto löschen"
            android:textColor="@android:color/white"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton" />

    </LinearLayout>
</androidx.core.widget.NestedScrollView>
