<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/conversationCard"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardBackgroundColor="@color/background_card"
    app:cardElevation="2dp"
    app:cardCornerRadius="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="12dp">

        <!-- Header: Avatar + Name + Time -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/conversationAvatar"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:contentDescription="Partner Avatar"
                android:scaleType="centerCrop"
                tools:src="@android:drawable/ic_menu_myplaces" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_marginStart="12dp">

                <TextView
                    android:id="@+id/conversationPartnerName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    tools:text="Partner Name" />

                <TextView
                    android:id="@+id/conversationLastMessageTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:textColor="?android:attr/textColorSecondary"
                    tools:text="vor 2 Stunden" />
            </LinearLayout>

            <!-- Unread Indicator -->
            <View
                android:id="@+id/conversationUnreadIndicator"
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:background="@color/primary"
                android:visibility="gone"
                tools:visibility="visible" />

        </LinearLayout>

        <!-- Meeting Info (if available) -->
        <LinearLayout
            android:id="@+id/conversationMeetingInfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="8dp"
            android:padding="8dp"
            android:background="@color/background_dark"
            android:visibility="gone"
            tools:visibility="visible">

            <TextView
                android:id="@+id/conversationMeetingTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textSize="14sp"
                tools:text="Meeting Title" />

            <TextView
                android:id="@+id/conversationMeetingEvent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:textColor="?android:attr/textColorSecondary"
                tools:text="Event: Spieleabend" />

            <TextView
                android:id="@+id/conversationMeetingLocation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:textColor="?android:attr/textColorSecondary"
                tools:text="Ort: CafÃ© am Markt" />

            <TextView
                android:id="@+id/conversationMeetingDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:textColor="?android:attr/textColorSecondary"
                tools:text="Datum: 15.01.2026" />

        </LinearLayout>

    </LinearLayout>
</com.google.android.material.card.MaterialCardView>
