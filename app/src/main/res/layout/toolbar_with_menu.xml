<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.appbar.MaterialToolbar xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/toolbar"
    android:layout_width="match_parent"
    android:layout_height="?attr/actionBarSize"
    android:background="@color/background_header"
    app:navigationIcon="@drawable/ic_menu"
    app:navigationIconTint="@color/text_primary"
    app:titleTextColor="@color/text_primary">

    <!-- Logo in der Mitte -->
    <ImageView
        android:id="@+id/toolbarLogo"
        android:layout_width="wrap_content"
        android:layout_height="32dp"
        android:layout_gravity="center"
        android:contentDescription="Meply Logo"
        android:src="@mipmap/ic_launcher" />

    <!-- Rechte Buttons Container -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end|center_vertical"
        android:layout_marginEnd="8dp"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <!-- Add Game Button (nur bei Collection sichtbar) -->
        <LinearLayout
            android:id="@+id/toolbarAddGameButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:padding="8dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:visibility="gone">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Spiel"
                android:textColor="@color/text_primary"
                android:textSize="14sp" />

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginStart="4dp"
                android:src="@android:drawable/ic_input_add"
                android:contentDescription="Spiel hinzufügen"
                app:tint="@color/text_primary" />

        </LinearLayout>

        <!-- Add Location Button (nur bei Locations sichtbar) -->
        <LinearLayout
            android:id="@+id/toolbarAddLocationButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:padding="8dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:visibility="gone">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Location"
                android:textColor="@color/text_primary"
                android:textSize="14sp" />

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginStart="4dp"
                android:src="@android:drawable/ic_input_add"
                android:contentDescription="Location hinzufügen"
                app:tint="@color/text_primary" />

        </LinearLayout>

        <!-- Filter Button (nur bei Events sichtbar) -->
        <LinearLayout
            android:id="@+id/toolbarFilterButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:padding="8dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:visibility="gone">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@android:drawable/ic_menu_search"
                android:contentDescription="Filter"
                app:tint="@color/text_primary" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:text="Filter"
                android:textColor="@color/text_primary"
                android:textSize="14sp" />

        </LinearLayout>

        <!-- Kontextabhängiger "Mep +" Button -->
        <LinearLayout
            android:id="@+id/toolbarCreateButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:padding="8dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:visibility="gone">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mep"
                android:textColor="@color/text_primary"
                android:textSize="16sp"
                android:textStyle="bold" />

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginStart="4dp"
                android:src="@android:drawable/ic_input_add"
                android:contentDescription="Erstellen"
                app:tint="@color/text_primary" />

        </LinearLayout>

    </LinearLayout>

</com.google.android.material.appbar.MaterialToolbar>
