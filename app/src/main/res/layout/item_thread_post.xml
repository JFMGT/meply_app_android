<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingStart="4dp">

    <!-- Tree connector columns - each column is 16dp wide -->
    <!-- Column 0 (for depth 1 posts) -->
    <FrameLayout
        android:id="@+id/treeColumn0"
        android:layout_width="16dp"
        android:layout_height="match_parent"
        android:visibility="gone">

        <!-- Vertical line - top half -->
        <View
            android:id="@+id/line0Top"
            android:layout_width="2dp"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal|top"
            android:background="@color/thread_line_0" />

        <!-- Vertical line - bottom half (hidden for last child) -->
        <View
            android:id="@+id/line0Bottom"
            android:layout_width="2dp"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal|bottom"
            android:background="@color/thread_line_0" />

        <!-- Horizontal connector (shown when this is the branch column) -->
        <View
            android:id="@+id/line0Horizontal"
            android:layout_width="8dp"
            android:layout_height="2dp"
            android:layout_gravity="center_vertical|end"
            android:background="@color/thread_line_0"
            android:visibility="gone" />
    </FrameLayout>

    <!-- Column 1 (for depth 2 posts) -->
    <FrameLayout
        android:id="@+id/treeColumn1"
        android:layout_width="16dp"
        android:layout_height="match_parent"
        android:visibility="gone">

        <View
            android:id="@+id/line1Top"
            android:layout_width="2dp"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal|top"
            android:background="@color/thread_line_1" />

        <View
            android:id="@+id/line1Bottom"
            android:layout_width="2dp"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal|bottom"
            android:background="@color/thread_line_1" />

        <View
            android:id="@+id/line1Horizontal"
            android:layout_width="8dp"
            android:layout_height="2dp"
            android:layout_gravity="center_vertical|end"
            android:background="@color/thread_line_1"
            android:visibility="gone" />
    </FrameLayout>

    <!-- Column 2 (for depth 3 posts) -->
    <FrameLayout
        android:id="@+id/treeColumn2"
        android:layout_width="16dp"
        android:layout_height="match_parent"
        android:visibility="gone">

        <View
            android:id="@+id/line2Top"
            android:layout_width="2dp"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal|top"
            android:background="@color/thread_line_2" />

        <View
            android:id="@+id/line2Bottom"
            android:layout_width="2dp"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal|bottom"
            android:background="@color/thread_line_2" />

        <View
            android:id="@+id/line2Horizontal"
            android:layout_width="8dp"
            android:layout_height="2dp"
            android:layout_gravity="center_vertical|end"
            android:background="@color/thread_line_2"
            android:visibility="gone" />
    </FrameLayout>

    <!-- Column 3 (for depth 4 posts) -->
    <FrameLayout
        android:id="@+id/treeColumn3"
        android:layout_width="16dp"
        android:layout_height="match_parent"
        android:visibility="gone">

        <View
            android:id="@+id/line3Top"
            android:layout_width="2dp"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal|top"
            android:background="@color/thread_line_3" />

        <View
            android:id="@+id/line3Bottom"
            android:layout_width="2dp"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal|bottom"
            android:background="@color/thread_line_3" />

        <View
            android:id="@+id/line3Horizontal"
            android:layout_width="8dp"
            android:layout_height="2dp"
            android:layout_gravity="center_vertical|end"
            android:background="@color/thread_line_3"
            android:visibility="gone" />
    </FrameLayout>

    <!-- Column 4 (for depth 5 posts) -->
    <FrameLayout
        android:id="@+id/treeColumn4"
        android:layout_width="16dp"
        android:layout_height="match_parent"
        android:visibility="gone">

        <View
            android:id="@+id/line4Top"
            android:layout_width="2dp"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal|top"
            android:background="@color/thread_line_4" />

        <View
            android:id="@+id/line4Bottom"
            android:layout_width="2dp"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal|bottom"
            android:background="@color/thread_line_4" />

        <View
            android:id="@+id/line4Horizontal"
            android:layout_width="8dp"
            android:layout_height="2dp"
            android:layout_gravity="center_vertical|end"
            android:background="@color/thread_line_4"
            android:visibility="gone" />
    </FrameLayout>

    <!-- Post card -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/postCard"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="2dp"
        android:layout_marginEnd="8dp"
        app:cardBackgroundColor="@color/background_card"
        app:cardElevation="1dp"
        app:cardCornerRadius="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Content area with padding -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="10dp">

                <!-- Post Header: Avatar + Username + Timestamp + Actions -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <ImageView
                        android:id="@+id/postAvatar"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:contentDescription="User Avatar"
                        android:scaleType="centerCrop"
                        tools:src="@android:drawable/ic_menu_myplaces" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:layout_marginStart="8dp">

                        <TextView
                            android:id="@+id/postUsername"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/text_on_light"
                            android:textStyle="bold"
                            android:textSize="13sp"
                            tools:text="Username" />

                        <TextView
                            android:id="@+id/postMeta"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="11sp"
                            android:textColor="?android:attr/textColorSecondary"
                            tools:text="2 hours ago" />
                    </LinearLayout>

                    <!-- Reply Button -->
                    <ImageButton
                        android:id="@+id/postReplyButton"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_marginEnd="6dp"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        android:contentDescription="Reply"
                        android:src="@drawable/ic_comment"
                        android:scaleType="fitCenter" />

                    <!-- Like Button -->
                    <ImageButton
                        android:id="@+id/postLikeButton"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        android:contentDescription="Like"
                        android:src="@drawable/ic_star_outline"
                        android:scaleType="fitCenter" />

                    <!-- Like Count -->
                    <TextView
                        android:id="@+id/postLikeCount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="2dp"
                        android:textColor="@color/text_on_light"
                        android:textSize="12sp"
                        android:minWidth="14dp"
                        tools:text="12" />

                    <!-- Hidden elements for compatibility -->
                    <ImageButton
                        android:id="@+id/postOptionsButton"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:visibility="gone" />

                    <TextView
                        android:id="@+id/postReplyCount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:visibility="gone" />
                </LinearLayout>

                <!-- Post Content -->
                <TextView
                    android:id="@+id/postContent"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:textColor="@color/text_on_light"
                    android:textSize="14sp"
                    android:lineSpacingMultiplier="1.1"
                    tools:text="This is the post content." />

                <!-- Image ViewPager -->
                <androidx.viewpager2.widget.ViewPager2
                    android:id="@+id/postImageViewPager"
                    android:layout_width="match_parent"
                    android:layout_height="180dp"
                    android:layout_marginTop="6dp"
                    android:visibility="gone" />

                <!-- Image Counter -->
                <TextView
                    android:id="@+id/postImageCounter"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:layout_marginTop="2dp"
                    android:textSize="10sp"
                    android:textColor="?android:attr/textColorSecondary"
                    android:visibility="gone"
                    tools:text="1 / 3" />

            </LinearLayout>

            <!-- Show deeper replies link -->
            <TextView
                android:id="@+id/postShowRepliesLink"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingVertical="6dp"
                android:paddingHorizontal="10dp"
                android:textSize="12sp"
                android:textColor="@color/text_on_primary"
                android:background="@color/primary"
                android:clickable="true"
                android:focusable="true"
                android:visibility="gone"
                tools:text="Weitere Antworten anzeigen" />

        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

</LinearLayout>
