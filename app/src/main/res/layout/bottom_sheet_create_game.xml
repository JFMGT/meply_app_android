<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/surface"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Header -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Neues Spiel anlegen"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/text_on_light"
            android:layout_marginBottom="8dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Lege ein neues Spiel an, das noch nicht in der Datenbank existiert."
            android:textSize="14sp"
            android:textColor="@color/text_secondary"
            android:layout_marginBottom="24dp" />

        <!-- Title Input -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/titleInputLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Spieltitel *"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            app:boxBackgroundColor="@android:color/white"
            app:hintTextColor="@color/text_on_light">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/titleInput"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="text"
                android:textColor="@color/text_on_light" />

        </com.google.android.material.textfield.TextInputLayout>

        <!-- Player Count Row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="16dp">

            <!-- Min Players -->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/minPlayersInputLayout"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="Min. Spieler"
                android:layout_marginEnd="8dp"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                app:boxBackgroundColor="@android:color/white"
                app:hintTextColor="@color/text_on_light">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/minPlayersInput"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="number"
                    android:textColor="@color/text_on_light" />

            </com.google.android.material.textfield.TextInputLayout>

            <!-- Max Players -->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/maxPlayersInputLayout"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="Max. Spieler"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                app:boxBackgroundColor="@android:color/white"
                app:hintTextColor="@color/text_on_light">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/maxPlayersInput"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="number"
                    android:textColor="@color/text_on_light" />

            </com.google.android.material.textfield.TextInputLayout>

        </LinearLayout>

        <!-- Playtime Row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="16dp">

            <!-- Min Playtime -->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/minPlaytimeInputLayout"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="Min. Spieldauer (Min)"
                android:layout_marginEnd="8dp"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                app:boxBackgroundColor="@android:color/white"
                app:hintTextColor="@color/text_on_light">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/minPlaytimeInput"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="number"
                    android:textColor="@color/text_on_light" />

            </com.google.android.material.textfield.TextInputLayout>

            <!-- Max Playtime -->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/maxPlaytimeInputLayout"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="Max. Spieldauer (Min)"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                app:boxBackgroundColor="@android:color/white"
                app:hintTextColor="@color/text_on_light">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/maxPlaytimeInput"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="number"
                    android:textColor="@color/text_on_light" />

            </com.google.android.material.textfield.TextInputLayout>

        </LinearLayout>

        <!-- Min Age -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/minAgeInputLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:hint="Mindestalter"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            app:boxBackgroundColor="@android:color/white"
            app:hintTextColor="@color/text_on_light">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/minAgeInput"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:textColor="@color/text_on_light" />

        </com.google.android.material.textfield.TextInputLayout>

        <!-- Loading Indicator -->
        <ProgressBar
            android:id="@+id/progressBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="24dp"
            android:visibility="gone" />

        <!-- Spacer -->
        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:minHeight="24dp" />

        <!-- Action Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="end"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp">

            <Button
                android:id="@+id/btnCancel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Abbrechen"
                android:layout_marginEnd="8dp"
                style="@style/Widget.MaterialComponents.Button.TextButton"
                android:textColor="@color/text_on_light" />

            <Button
                android:id="@+id/btnCreate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Erstellen"
                android:backgroundTint="@color/primary"
                android:textColor="@color/text_on_light" />

        </LinearLayout>

    </LinearLayout>

</ScrollView>
