<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="4dp"
    app:cardBackgroundColor="@color/surface"
    app:cardCornerRadius="8dp"
    app:cardElevation="2dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Thumbnail Image -->
        <ImageView
            android:id="@+id/upload_thumbnail"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:scaleType="centerCrop"
            android:background="@color/background_dark"
            android:contentDescription="Hochgeladenes Bild"
            tools:src="@color/primary" />

        <!-- Meta Info -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="8dp">

            <!-- Filename -->
            <TextView
                android:id="@+id/upload_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="middle"
                android:maxLines="1"
                android:textColor="@color/text_primary"
                android:textSize="12sp"
                android:textStyle="bold"
                tools:text="bild_2024_01.jpg" />

            <!-- File Details -->
            <TextView
                android:id="@+id/upload_details"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:textColor="@color/text_secondary"
                android:textSize="10sp"
                tools:text="image/jpeg - 245 KB" />

            <!-- Dimensions -->
            <TextView
                android:id="@+id/upload_dimensions"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/text_secondary"
                android:textSize="10sp"
                tools:text="1920x1080" />

            <!-- Reason/Purpose -->
            <TextView
                android:id="@+id/upload_reason"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:textColor="@color/text_secondary"
                android:textSize="10sp"
                tools:text="Grund: Beitrag" />

            <!-- Date -->
            <TextView
                android:id="@+id/upload_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/text_secondary"
                android:textSize="10sp"
                tools:text="01.01.2024" />

        </LinearLayout>

        <!-- Delete Button -->
        <Button
            android:id="@+id/btn_delete"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            android:backgroundTint="@color/error"
            android:text="LÃ¶schen"
            android:textColor="@android:color/white"
            android:textSize="12sp"
            style="@style/Widget.MaterialComponents.Button" />

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>
