<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp"
        android:gravity="center_horizontal">

        <!-- Icon -->
        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginTop="32dp"
            android:layout_marginBottom="24dp"
            android:src="@drawable/ic_mail"
            android:padding="20dp"
            android:background="@color/primary"
            android:contentDescription="Benachrichtigungen" />

        <!-- Title -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Bleib auf dem Laufenden"
            android:textColor="@color/text_primary"
            android:textSize="24sp"
            android:textStyle="bold"
            android:layout_marginBottom="16dp" />

        <!-- Description -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Erhalte Benachrichtigungen über:"
            android:textColor="@color/text_secondary"
            android:textSize="16sp"
            android:textAlignment="center"
            android:layout_marginBottom="24dp" />

        <!-- Benefits list -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="32dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="• Neue Nachrichten von anderen Spielern"
                android:textColor="@color/text_primary"
                android:textSize="14sp"
                android:layout_marginBottom="8dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="• Spieler in deiner Nähe sind spielbereit"
                android:textColor="@color/text_primary"
                android:textSize="14sp"
                android:layout_marginBottom="8dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="• Neue Events in deiner Umgebung"
                android:textColor="@color/text_primary"
                android:textSize="14sp"
                android:layout_marginBottom="8dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="• Interessante Angebote auf dem Marktplatz"
                android:textColor="@color/text_primary"
                android:textSize="14sp" />

        </LinearLayout>

        <!-- Enable button -->
        <Button
            android:id="@+id/btn_enable_notifications"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Benachrichtigungen aktivieren"
            android:textColor="@color/text_on_primary"
            android:backgroundTint="@color/primary"
            android:paddingHorizontal="32dp"
            android:layout_marginBottom="16dp" />

        <!-- Status text -->
        <TextView
            android:id="@+id/notification_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="14sp" />

        <!-- Note -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:text="Du kannst Benachrichtigungen jederzeit in den Einstellungen anpassen."
            android:textColor="@color/text_disabled"
            android:textSize="12sp"
            android:textAlignment="center" />

    </LinearLayout>

</ScrollView>
