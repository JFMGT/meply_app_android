<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- ===== PRIMARY BRAND COLORS ===== -->
    <!-- Main accent color (yellow/gold) - used for buttons, highlights, active states -->
    <color name="primary">#fec50d</color>
    <color name="primary_dark">#f0b000</color>
    <color name="primary_light">#ffd52d</color>

    <!-- ===== BACKGROUND COLORS ===== -->
    <!-- Main app background (dark blue-grey) -->
    <color name="background">#2f3444</color>
    <!-- Header/toolbar background (darker blue-grey) -->
    <color name="background_header">#282c39</color>
    <!-- Alternative dark background -->
    <color name="background_dark">#1a1f2e</color>
    <!-- Very dark background/text color -->
    <color name="background_darkest">#151d26</color>
    <!-- Card/surface background (slightly lighter) -->
    <color name="background_card">#ffffff</color>

    <!-- ===== TEXT COLORS ===== -->
    <!-- Primary text on dark background -->
    <color name="text_primary">#FFFFFF</color>
    <!-- Secondary text on dark background (slightly dimmed) -->
    <color name="text_secondary">#B0B0B0</color>
