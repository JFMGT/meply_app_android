<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Main App Theme - Dark theme matching the web application -->
    <style name="Theme.Meply" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color (yellow/gold) -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/primary_dark</item>
        <item name="colorOnPrimary">@color/text_on_light</item>

        <!-- Secondary brand color -->
        <item name="colorSecondary">@color/primary</item>
        <item name="colorSecondaryVariant">@color/primary_dark</item>
        <item name="colorOnSecondary">@color/text_on_light</item>

        <!-- Error color -->
        <item name="colorError">@color/error</item>
        <item name="colorOnError">@color/text_primary</item>

        <!-- Background colors -->
        <item name="android:colorBackground">@color/background</item>
        <item name="colorSurface">@color/background_card</item>
        <item name="colorOnBackground">@color/text_primary</item>
        <item name="colorOnSurface">@color/text_primary</item>

        <!-- Window background -->
        <item name="android:windowBackground">@color/background</item>

        <!-- Status bar -->
        <item name="android:statusBarColor">@color/background_header</item>
        <item name="android:windowLightStatusBar">false</item>

        <!-- Navigation bar -->
        <item name="android:navigationBarColor">@color/background_darkest</item>
        <item name="android:windowLightNavigationBar">false</item>

        <!-- Text colors -->
        <item name="android:textColorPrimary">@color/text_primary</item>
        <item name="android:textColorSecondary">@color/text_secondary</item>
        <item name="android:textColorHint">@color/text_disabled</item>
        <item name="colorOnPrimary" tools:ignore="DuplicateDefinition">@color/text_on_light</item>

        <!-- AlertDialog styling -->
        <item name="alertDialogTheme">@style/Theme.Meply.AlertDialog</item>
    </style>

    <!-- Alert Dialog Theme - Light background with dark text -->
    <style name="Theme.Meply.AlertDialog" parent="ThemeOverlay.MaterialComponents.MaterialAlertDialog">
        <item name="android:background">@color/background_card</item>
        <item name="backgroundTint">@color/background_card</item>
        <item name="android:textColorPrimary">@color/text_on_light</item>
        <item name="android:textColorSecondary">@color/text_disabled</item>
        <item name="colorSurface">@color/background_card</item>
        <item name="colorOnSurface">@color/text_on_light</item>
        <item name="materialAlertDialogTitleTextStyle">@style/Theme.Meply.AlertDialog.Title</item>
        <item name="materialAlertDialogBodyTextStyle">@style/Theme.Meply.AlertDialog.Body</item>
        <item name="buttonBarNegativeButtonStyle">@style/Theme.Meply.AlertDialog.Button</item>
        <item name="buttonBarPositiveButtonStyle">@style/Theme.Meply.AlertDialog.Button</item>
    </style>

    <!-- Alert Dialog Title Style -->
    <style name="Theme.Meply.AlertDialog.Title" parent="MaterialAlertDialog.MaterialComponents.Title.Text">
        <item name="android:textColor">@color/text_on_light</item>
    </style>

    <!-- Alert Dialog Body Style -->
    <style name="Theme.Meply.AlertDialog.Body" parent="MaterialAlertDialog.MaterialComponents.Body.Text">
        <item name="android:textColor">@color/text_disabled</item>
    </style>

    <!-- Alert Dialog Button Style -->
    <style name="Theme.Meply.AlertDialog.Button" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">@color/primary</item>
    </style>

    <!-- DatePicker Theme - Dark text on calendar -->
    <style name="Theme.Meply.DatePicker" parent="ThemeOverlay.MaterialComponents.MaterialCalendar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorOnPrimary">@color/text_on_light</item>
        <item name="colorSurface">@color/white</item>
        <item name="colorOnSurface">@color/text_on_light</item>
        <item name="android:textColorPrimary">@color/text_on_light</item>
        <item name="android:textColorSecondary">@color/text_on_light</item>
    </style>

    <!-- Bottom Navigation Style -->
    <style name="Widget.Meply.BottomNavigationView" parent="Widget.MaterialComponents.BottomNavigationView">
    </style>

    <!-- UCrop Theme - Dunkles Theme mit Navigation Bar Support -->
    <style name="Theme.Meply.UCrop" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/primary_dark</item>
        <item name="colorOnPrimary">@color/text_primary</item>
        <item name="android:colorBackground">@color/background</item>
        <item name="colorSurface">@color/background_card</item>
        <item name="colorOnSurface">@color/text_primary</item>
        <item name="android:windowBackground">@color/background</item>
        <item name="android:statusBarColor">@color/background_header</item>
        <item name="android:navigationBarColor">@color/background_darkest</item>
        <item name="android:windowLightStatusBar">false</item>
        <item name="android:windowLightNavigationBar">false</item>
        <!-- Wichtig: UI nicht unter System Bars zeichnen -->
        <item name="android:fitsSystemWindows">true</item>
    </style>

    <!-- Fullscreen Theme for Image Viewer -->
    <style name="Theme.Meply.Fullscreen" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorOnPrimary">@color/text_on_light</item>
        <item name="android:colorBackground">@color/black</item>
        <item name="android:windowBackground">@color/black</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
    </style>
</resources>
